# =========================================================
# 1. HTTP zu HTTPS Redirect
# =========================================================
server {
    listen 80;
    server_name fecg-lahr-app.de www.fecg-lahr-app.de api.fecg-lahr-app.de;
    return 301 https://$host$request_uri;
}

# =========================================================
# 2. FRONTEND SERVER (HTTPS Port 443 -> Docker 3001)
# =========================================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name fecg-lahr-app.de www.fecg-lahr-app.de;

    ssl_certificate /etc/letsencrypt/live/fecg-lahr-app.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/fecg-lahr-app.de/privkey.pem;

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    access_log /var/log/nginx/fecg-lahr.access.log;
    error_log /var/log/nginx/fecg-lahr.error.log;

    location / {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# =========================================================
# 3. BACKEND SERVER (Subdomain api.fecg-lahr-app.de -> Docker 8001)
# =========================================================
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name api.fecg-lahr-app.de;

    ssl_certificate /etc/letsencrypt/live/fecg-lahr-app.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/fecg-lahr-app.de/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    client_max_body_size 50M;

    access_log /var/log/nginx/fecg-lahr-backend.access.log;
    error_log /var/log/nginx/fecg-lahr-backend.error.log;

    # --- MEDIA FILES (Hochgeladene Bilder) ---
    location /media/ {
        proxy_pass http://127.0.0.1:8001/media/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS für Media-Dateien
        proxy_hide_header 'Access-Control-Allow-Origin';
        add_header 'Access-Control-Allow-Origin' 'https://fecg-lahr-app.de' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
    }

    # --- ROUTING ZUM BACKEND CONTAINER MIT CORS FIX ---
    location / {
        # 1. Preflight-Anfragen (OPTIONS)
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' 'https://fecg-lahr-app.de' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization,Content-Type,Accept,Origin,User-Agent,DNT,Cache-Control,X-Mx-ReqToken,Keep-Alive,X-Requested-With,If-Modified-Since' always;
            add_header 'Access-Control-Allow-Credentials' 'true' always;
            add_header 'Content-Length' 0;
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            return 204;
        }

        # 2. Header Fix für doppelte CORS-Header
        proxy_hide_header 'Access-Control-Allow-Origin';
        add_header 'Access-Control-Allow-Origin' 'https://fecg-lahr-app.de' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;

        # 3. Login Rewrite
        rewrite ^/login/(.*)$ /api/login/$1 break;
        rewrite ^/login$ /api/login/ break;
        
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
    }
}
